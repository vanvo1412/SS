@model IEnumerable<SSApp.Models.Alteration>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeftLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RightLength)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @((StatusEnum)item.Status)
            </td>
            <td>
                @((AlterationTypeEnum)item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeftLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RightLength)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
